.row-fluid
  .span12
    %h2
      Countries management
      %small
      - if can? :create, Country
        = link_to 'New country', new_new_admin_country_path, class: "btn btn-info btn-small"

    %table.table.table-striped.table-hover.table-condensed
      %thead
        %tr
          %th Email
          %th Flag
          %th Number of elections
          %th Actions
      %tbody
        - @countries.each do |c|
          %tr.country
            %td= c
            %td= image_tag "https://voxe.s3.amazonaws.com/countries/" + c.namespace + ".jpg", class: "flag", onerror: "this.style.display = 'none';"

            %td= c.elections.count
            %td
              = link_to "Edit", edit_new_admin_country_path(c), class: 'btn btn-small'
              = link_to new_admin_country_path(c), class: 'btn btn-small btn-danger', confirm: "delete this country ?", method: "DELETE" do
                %i.icon-remove-circle
                Delete
